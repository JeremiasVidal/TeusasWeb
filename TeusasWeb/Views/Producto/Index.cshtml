@model IEnumerable<TeusasWeb.Models.ProductoModel>

@{
    ViewData["Title"] = "Catálogo";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Catálogo de Productos</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 rounded-4">
                        <img src="@producto.foto" class="card-img-top rounded-top-4" alt="@producto.nombre" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">@producto.nombre</h5>
                            <p class="card-text small text-muted text-truncate">@producto.descripcion</p>
                            <p class="fw-bold text-primary mt-auto">$@producto.precio</p>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@producto.id" class="btn btn-outline-primary btn-sm">Ver más</a>
                            <a asp-action="Edit" asp-route-id="@producto.id" class="btn btn-outline-secondary btn-sm">Editar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            No hay productos disponibles por el momento.
        </div>
    }
</div>
